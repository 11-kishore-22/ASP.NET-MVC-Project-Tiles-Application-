<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ganesh Tiles</title>
    <link href="~/Images/GT logo.png" rel="icon" />
    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Oswald:wght@400;500;600&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Flaticon Font -->
    <link href="~/lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-secondary navbar-dark py-3 py-lg-0 pl-3 pl-lg-5 bg-dark">
        <div class="container">
            <h1 class="m-0 display-5 text-white"><span style="color:darkgoldenrod;" class=" ">GANESH</span>TILES</h1>
            <div class="navbar navbar-expand d-sm-inline-block navbar-nav ml-auto py-0">
                <ul class="navbar-nav ">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-lighter nav-item nav-link" })</li>
                    <li>@Html.ActionLink("Products", "Product", "Home", new { area = "" }, new { @class = "  navbar-brand fw-lighter  nav-item nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "  navbar-brand fw-lighter  nav-item nav-link " })</li>
                    <li>@Html.ActionLink("Register","Register", "RegisterLogin", new { area = "" }, new { @class = " navbar-brand fw-lighter  nav-item nav-link " })</li>
                    <li>@Html.ActionLink("Admin", "Admin", "tbl_Admin", new { area = "" }, new { @class = " navbar-brand fw-lighter  nav-item nav-link" })</li>

                </ul>
            </div>

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>

            Ganesh Tiles &copy; @DateTime.Now.Year All Rights Reserved Designed | Kishore</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
